generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name      String
  lastName  String
  password  String
  address   String
  cpf      String   @unique
  rg       String   @unique
  email     String   @unique
  cellphone String   @unique
  createdAt DateTime @default(now())

  @@map("usuario")
}